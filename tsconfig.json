{
  "compilerOptions": {
    "target": "ES2020", // Целевая версия JavaScript
    "module": "commonjs", // Тип модулей
    "outDir": "./dist", // Директория для скомпилированных файлов
    "rootDir": "./src", // Директория с файлами проекта
    "strict": true, // Включение строгого режима
    "esModuleInterop": true, // Улучшенная совместимость модулей ES
    "skipLibCheck": true // Пропуск проверки типов в библиотеках
    
  },
  "include": ["src/**/*"], // Включение файлов для компиляции
  "exclude": ["node_modules", "**/*.spec.ts"] // Исключение файлов из компиляции
}
